# FLASK
FLASK_ENV=production
FLASK_APP=run.py

# DATABASE
# Use em produção (Render/Neon): defina DATABASE_URL nas variáveis do serviço
# Exemplo (NÃO COMITE CREDENCIAIS):
# DATABASE_URL=postgresql://user:password@host/dbname?sslmode=require
DATABASE_URL=
# Para desenvolvimento local, use um SQLite fora do repositório
# SQLITE_DB=sqlite:///mercadinho.db
SQLITE_DB=

# SECURITY
# Gere chaves seguras em produção via painel do provedor
SECRET_KEY=
JWT_SECRET_KEY=

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# EMAIL
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
